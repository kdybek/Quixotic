{
  "manifest_version": 3,
  "name": "Jisho Button",
  "version": "1.0",
  "description": "Adds a button to jisho.org.",
  "permissions": ["*://jisho.org/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://jisho.org/*"],
      "js": ["content.js"]
    }
  ]
}